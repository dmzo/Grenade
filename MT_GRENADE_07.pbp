'crazy_second_byte:
	databyte = 6			'team 0(NA); damage 15			      
	GoSub send_byte_short
	
	PAUSE 300
'--------------------	
	CCP1CON = 12				'send MT header pulse (2.4mS)
    	pauseus mtheader  
	CCP1CON = 0

'crazy_first_byte:
    databyte = 57     		'packet_ID=0 (shot); playerID = 57 (MINE) MT     
	GoSub send_byte

'crazy_second_byte:
	databyte = 6			'team 0(NA); damage 15			      
	GoSub send_byte_short
	
	PAUSE 300	
'--------------------	
	CCP1CON = 12				'send MT header pulse (2.4mS)
    	pauseus mtheader  
	CCP1CON = 0

'crazy_first_byte:
    databyte = 57     		'packet_ID=0 (shot); playerID = 57 (MINE) MT     
	GoSub send_byte

